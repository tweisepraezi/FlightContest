<Style name="railway-bridges-casing">	
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom13;
		<Filter>([railway] = 'rail')</Filter>
		<LineSymbolizer stroke="black" stroke-width="5.5"/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom13;
		<Filter>[length] &gt; 100 and ([railway] = 'rail')</Filter>
		<MarkersSymbolizer file="symbols-otm/bridge_5px_first.png" placement="vertex-first" allow-overlap="true" />
		<MarkersSymbolizer file="symbols-otm/bridge_5px_last.png" placement="vertex-last" allow-overlap="true" />
	</Rule>
	
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom14;
		<Filter>([railway] = 'rail')</Filter>
		<LineSymbolizer stroke="black" stroke-width="6"/>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom14;
		<Filter>[length] &gt; 30 and  ([railway] = 'rail')</Filter>
		<MarkersSymbolizer file="symbols-otm/bridge_6px_first.png" placement="vertex-first" allow-overlap="true" />
		<MarkersSymbolizer file="symbols-otm/bridge_6px_last.png" placement="vertex-last" allow-overlap="true" />
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom17;
		<Filter>[length] &gt; 5 and ([railway] = 'rail')</Filter>
		<LineSymbolizer stroke="black" stroke-width="8"/>
		<MarkersSymbolizer file="symbols-otm/bridge_7px_first.png" placement="vertex-first" allow-overlap="true" />
		<MarkersSymbolizer file="symbols-otm/bridge_7px_last.png" placement="vertex-last" allow-overlap="true" />
	</Rule>


	<Rule>
		&maxscale_zoom13;
		&minscale_zoom17;
		<Filter>(([railway] = 'narrow_gauge') or ([railway] = 'funicular')) </Filter>
		<LineSymbolizer stroke="black" stroke-width="5.5" />
	</Rule>	

	<Rule>
		&maxscale_zoom13;
		&minscale_zoom13;
		<Filter>([railway] = 'disused')</Filter>
		<LineSymbolizer stroke="black" stroke-width="6.5" />
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom14;
		<Filter>([railway] = 'disused')</Filter>
		<LineSymbolizer stroke="black" stroke-width="6.5" />
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom17;
		<Filter>([railway] = 'disused')</Filter>
		<LineSymbolizer stroke="black" stroke-width="7.5" />
	</Rule>

	<Rule>
		&maxscale_zoom12;
		&minscale_zoom17;
		<Filter>([railway] = 'light_rail')</Filter>
		<LineSymbolizer stroke="black" stroke-width="5.5" />
	</Rule>
	
	
	
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom17;
		<Filter>[railway] = 'subway'</Filter>
		<LineSymbolizer stroke="black" stroke-width="5" />
		<MarkersSymbolizer file="symbols-otm/bridge_5px_first.png" placement="vertex-first" allow-overlap="true" />
		<MarkersSymbolizer file="symbols-otm/bridge_5px_last.png" placement="vertex-last" allow-overlap="true" />
	</Rule>
</Style>
