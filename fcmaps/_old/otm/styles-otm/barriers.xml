<Style name="barriers">
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom14;
		<Filter>([length] &gt; 300) and ([barrier] = 'fence' or [fenced] = 'yes' or [barrier] = 'wall')</Filter>
		<LinePatternSymbolizer file="symbols-otm/fence.png"/>
		<LineSymbolizer stroke="black" stroke-width="0.5"/>
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom17;
		<Filter>([barrier] = 'fence') or ([fenced] = 'yes') or ([barrier] = 'wall')</Filter>
		<LinePatternSymbolizer file="symbols-otm/fence.png"/>
		<LineSymbolizer stroke="black" stroke-width="0.5"/>
	</Rule>
	
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom14;
		<Filter>([length] &gt; 300) and ([barrier] = 'hedge')</Filter>
		<LinePatternSymbolizer file="symbols-otm/hedge.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom17;
		<Filter>[barrier] = 'hedge'</Filter>
		<LinePatternSymbolizer file="symbols-otm/hedge.png"/>
	</Rule>
	
	<Rule>
		&maxscale_zoom16;
		&minscale_zoom17;
		<Filter>[barrier] = 'city_wall' or [historic] = 'citywalls'</Filter>
		<LineSymbolizer stroke="black" stroke-width="1.3" />
		<LinePatternSymbolizer file="symbols-otm/dyke_path.png"/>
	</Rule>
</Style>
